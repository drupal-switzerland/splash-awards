{% if page.doormat or page.doormat_02 or page.doormat_03 or page.doormat_04 %}
<aside class="doormat" role="contentinfo">
  <div class="container">
    <div class="row row--doormat">
      {% if page.doormat %}
      <div class="col col--doormat col--doormat--01">
        {{ page.doormat }}
      </div>
      {% endif %}

      {% if page.doormat_02 %}
      <div class="col col--doormat col--doormat--02">
        {{ page.doormat_02 }}
      </div>
      {% endif %}

      {% if page.doormat_03 %}
      <div class="col col--doormat col--doormat--03">
        {{ page.doormat_03 }}
      </div>
      {% endif %}

      {% if page.doormat_04 %}
      <div class="col col--doormat col--doormat--04">
        {{ page.doormat_04 }}
      </div>
      {% endif %}
    </div>
  </div>
</aside>
{% endif %}
