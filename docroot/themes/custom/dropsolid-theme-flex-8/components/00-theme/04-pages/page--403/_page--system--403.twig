{% embed '@pages/page/_page--master.twig' %}

  {# all non-Panel pages use the same layout for the main content #}

  {% block pageContent %}
    {{ page.content }}

    <div class="actions actions--403">
      <a href="{{ front_page }}" title="{{ 'Home'|t }}" rel="home" class="button">{{ 'Back to the frontpage'|t }}</a>

      <span class="actions__divider"> {{ 'or'|t }} </span>

      <a href="/user/login" title="{{ 'Login'|t }}" class="button">{{ 'Login'|t }}</a>
    </div>

  {% endblock %}

{% endembed %}
